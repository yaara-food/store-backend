{
  "name": "next-ecommerce-backend",
  "version": "1.0.0",
  "description": "Backend API for Next.js e-commerce platform",
  "author": "GILAD",
  "license": "MIT",
  "private": false,
  "main": "dist/src/lib/index.js",
  "types": "dist/src/lib/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    "./*": "./dist/src/*"
  },
  "keywords": [
    "express",
    "ecommerce",
    "typescript",
    "typeorm",
    "postgresql",
    "jwt"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/giladfuchs/next-ecommerce"
  },
  "scripts": {
    "dev": "tsx src/dev.ts",
    "cron": "tsx scripts/cron.ts",
    "nodemon": "nodemon --exec tsx src/dev.ts",
    "debug": "npx --node-arg=--inspect-brk tsx src/dev.ts",
    "debug:script": "node --inspect-brk node_modules/.bin/tsx scripts/make_backup.ts",
    "typecheck": "tsc --noEmit",
    "prettier": "npx prettier --write .",
    "build": "pnpm typecheck && tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "codegen:recored": "NODE_ENV=test SEED=true PORT=4010 tsx src/dev.ts"
  },
  "dependencies": {
    "@vercel/blob": "^1.0.0",
    "@vercel/node": "^5.1.14",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "1.4.5-lts.2",
    "nodemailer": "^6.10.1",
    "pg": "^8.15.6",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.34.1",
    "typeorm": "^0.3.22"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^18.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.0.0",
    "vitest": "^3.1.3"
  },
  "packageManager": "pnpm@10.8.1"
}
